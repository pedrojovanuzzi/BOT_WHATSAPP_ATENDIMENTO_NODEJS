<% if (errors.length > 0) { %>
    <div class="row">
      <div class="col my-3">
        <div class="alert alert-danger" style="color: red">
          <% errors.forEach(erro => { %>
            ⚠️ <%= erro %><br>
          <% }); %>
        </div>
      </div>
    </div>
    <% } %>
    
    <% if (success.length > 0) { %>
    <div class="row">
      <div class="col my-3">
        <div class="alert alert-success" style="color: rgb(10, 218, 20)">
          <% success.forEach(success => { %>
          <%= success %><br>
          <% }); %>
        </div>
      </div>
    </div>
    <% } %>